@{
}
<form asp-action="ForgotPasswordSecurity" method="post">
    <label>
        @if (ViewBag.Question != null)
        {
            <h2>@ViewBag.Question</h2>
        }
        else
        {
            <p>No security question found.</p>
        }
    </label>
    <input type="text" id="answer" name="answer" required />
    <button type="submit">Submit</button>
    <a asp-controller="Account" asp-action="Login" class="btn btn-secondary">Cancel</a>
</form>

