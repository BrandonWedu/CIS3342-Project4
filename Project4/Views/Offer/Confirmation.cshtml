@{
}
<div class="row justify-content-center mt-5">
	<div class="card shadow mt-5 mb-5">
		<h4 class="card-title">Offer Confirmation</h4>
		<div class="card-body">
		<h1>@TempData["Message"]</h1>
		<p class="mt-3">Thank you, @TempData["FirstName"] @TempData["LastName"], for submitting your offer!</p>
		<p class="fw-bold">Offer Details:</p><br />
		<p>Home Address: @TempData["OfferHomeAddress"]</p><br />
		<p>Offer Amount: $@TempData["OfferAmount"]</p><br />
		<p class="mt-4">You will be redirected to the dashboard shortly...</p>
		</div>
	</div>
</div>

<script>
	setTimeout(function () {
		window.location.href = '@Url.Action("Dashboard", "Dashboard")';
	}, 6000);
</script>